---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const blogs = await getCollection("blog");
---

<Layout title="blog - shasherazi's portfolio">
  <main class="px-64 max-lg:px-32 max-md:px-24 max-sm:px-8 flex flex-col gap-5">
    <h1 class="text-4xl max-md:text-3xl font-semibold text-accent">blog</h1>
    <div class="flex flex-col gap-8">
      {blogs.map((blog) => (
        <div class="ml-4">
          <a 
            href=`/blog/${blog.data.slug}` 
            class="text-xl max-md:text-lg underline hover:italic hover:decoration-accent"
          >
            {blog.data.title}
          </a>
          <p class="mt-2 whitespace-nowrap overflow-hidden text-ellipsis">
            {blog.data.description}
          </p>
        </div>
      ))}
    </div>
  </main>
</Layout>
